<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/icon_width"
        android:layout_height="@dimen/icon_width"
        android:id="@+id/artistImageView"
        android:layout_gravity="center_vertical"
        android:minHeight="36dp"
        android:minWidth="36dp"
        android:layout_marginTop="@dimen/icon_vertical_margin"
        android:layout_marginBottom="@dimen/icon_vertical_margin"
        android:layout_marginLeft="@dimen/icon_horizontal_margin"
        android:layout_marginRight="@dimen/icon_horizontal_margin"
        android:scaleType="centerCrop"
        android:background="@color/accent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artistNameView"
        android:layout_gravity="center_vertical"
        android:clickable="false"
        android:textSize="16sp" />

</LinearLayout>
